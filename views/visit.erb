<h2>Здесь можно записаться.</h2>

<form action="/visit" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Ваше имя</label>
    <input type="text" name="clientname" class="form-control" id="exampleInputEmail1" placeholder="Введите ваше имя" value="<%= @clientname %>">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Ваша фамилия</label>
    <input type="text" name="clientfamily" class="form-control aaa" id="exampleInputEmail1" placeholder="Введите вашу фамилию" value="<%= @clientfamily %>">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Когда вас ждать</label>
    <input type="text" name="visittime" class="form-control aaa" id="exampleInputEmail1" placeholder="Введите дату и время" value="<%= @visittime %>">
  </div>
  <div class="form-group">
    <label>Выберите мастера:</label>
 		<select class="form-control" name="choice">
  			<option <%= @choice == 'Mark'? 'selected' : '' %>>Mark</option>
  			<option <%= params[:choice] == 'Jessie'? 'selected' : '' %>>Jessie</option>
  			<option <%=  'selected' if @choice == 'Fred'%>>Fred</option>
  		</select>
  </div>
  <div class="form-group">
    <label>Выберите цват:</label>
 		<select id="color" name="color">
		<option value="#7bd148">Green</option>
		<option value="#5484ed">Bold blue</option>
		<option value="#a4bdfc">Blue</option>
		<option value="#46d6db">Turquoise</option>
		<option value="#7ae7bf">Light green</option>
		<option value="#51b749">Bold green</option>
		<option value="#fbd75b">Yellow</option>
		<option value="#ffb878">Orange</option>
		<option value="#ff887c">Red</option>
		<option value="#dc2127">Bold red</option>
		<option value="#dbadff">Purple</option>
		<option value="#e1e1e1">Gray</option>
		</select>
  </div>
    <button type="submit" class="btn btn-primary">Подтвердить</button>
</form>

<script type="text/javascript">
	$('.aaa').css('background-color', 'yellow');
	$('#color').simplecolorpicker();
</script>